{% extends 'base.html.twig' %}

{% block title %}Map{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link href='https://api.tiles.mapbox.com/mapbox-gl-js/v0.28.0/mapbox-gl.css' rel='stylesheet' />
{% endblock %}

{% block navbar %}
    <p class="navbar-text">Stations :{{ tot_stations }}</p>
    <p class="navbar-text">Slots :{{ tot_slots }}</p>
    <p class="navbar-text">bikes :{{ tot_bikes }}</p>
    <p class="navbar-text">Updated at :{{ updateTime }}</p>
    {{ parent() }}
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-xs-12 col-md-4" id="stations">
            {% include ':bcning:stations.html.twig' %}
        </div>

        <div class="col-xs-12 col-md-8">
            <div class="map-col">
                <div id="map"></div>
            </div>
        </div>

    </div>
{% endblock %}



{% block javascripts %}
    <script src='https://api.tiles.mapbox.com/mapbox-gl-js/v0.28.0/mapbox-gl.js'></script>
    <script src="{{ asset('js/full_map.js') }}"></script>
{% endblock %}
